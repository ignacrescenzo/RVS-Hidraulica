
@{
    ViewData["Title"] = "Servicios";
    Layout = "_Layout";
}
<link rel="stylesheet" href="@Url.Content("~/css/servicios.css")"/>
<div class="mx-5 mt-5">
    <h1 class="text-center font-weight-bold">Servicios</h1>
    <div class="d-md-flex  mt-4 justify-content-between">
        <div class="card col col-md-5 p-0">
            <img src="@Url.Content("~/img/repair.jpg")" class="card-img-top" alt="">
            <div class="card-body">
                <h5 class="card-title font-weight-bold">Reparaciones</h5>
                <p class="card-text">Reparamos todo tipo de bombas y motores hidráulicos
                    ya sea a pistones, engranajes, paletas u orbitales. También cilindros
                    hidráulicos y válvulas direccionales. Contamos con amplio stock
                    de repuestos</p>
            </div>
        </div>
        <div class="card col col-md-5 p-0">
            <img src="@Url.Content("~/img/centrales.jpg")" class="card-img-top" alt="">
            <div class="card-body">
                <h5 class="card-title font-weight-bold">Centrales hidráulicas</h5>
                <p class="card-text">Diseñamos, construimos y reparamos centrales. 
                    Además, fabricamos repuestos especiales.</p>
            </div>
        </div>
    </div>
</div>
