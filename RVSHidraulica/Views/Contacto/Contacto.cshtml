
@{
    ViewData["Title"] = "Contacto";
    Layout = "_Layout";
}
<script>
    var pathEnviarMensaje = '@Url.Action("EnviarMensaje")'
</script>
<link rel="stylesheet" href="@Url.Content("~/css/contacto.css")"/>
<div class="mx-5 mt-5">
    <h1 class="text-center font-weight-bold">Contacto</h1>
    <div class="d-md-flex mt-4">
        <div class="col col-md-6 pr-5">
            <div class="mb-5">
                <p class="text-center font-weight-bold">
                    Te brindamos todos los medios necesarios para que puedas comunicarte con nosotros.
                </p>
            </div>
            <div class="mb-5">
                <div class="mb-1 font-weight-bold">Email <i class="ml-2 fas fa-envelope"></i> </div>
                <div><a href="mailto:rolando@rvshidraulica.com" class="text-dark">rolando@rvshidraulica.com</a></div>
            </div>
            <div class="mb-5 flex-column d-flex">
                <div class="mb-1 font-weight-bold">Teléfono <i class="ml-2 fas fa-phone"></i> <i class="ml-2 fab fa-whatsapp"></i></div>
                <span>15-6369-5476</span>
                <span>2137-1561</span>
            </div>
            <div class="mb-5">
                <div class="mb-1 font-weight-bold">Ubicación <i class="ml-2 fas fa-location-arrow"></i></div>
                <div>Concejal Nicolás Defilippi 1253, Ituzaingó, Buenos Aires</div>
            </div>
        </div>
        <div class="col col-md-6 pl-5">
            <form>
                <div class="form-group">
                    <label>Nombre</label>
                    <input type="text" id="nombre" placeholder="Ingrese su nombre" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Email  <i>(opcional)</i></label>
                    <input type="email" id="email" placeholder="Ingrese su email" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Tipo de mensaje</label>
                    <select class="form-control" id="tipoMensaje">
                        <option value="0" selected disabled>Seleccione el tipo de mensaje</option>
                        <option value="1">Consulta</option>
                        <option value="2">Sugerencia</option>
                        <option value="3">Pedido</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>Mensaje</label>
                    <textarea class="form-control" id="mensaje" rows="5"></textarea>
                </div>
                <button type="button" id="btnEnviar" class="btn btn-primary px-5 font-weight-bold">Enviar</button>
            </form>
        </div>
    </div>
    <div class="col col-md-12 mt-5">
        <h3 class="text-center font-weight-bold mb-3">¿Dónde estamos? <i class="fas fa-map-marker-alt"></i></h3>
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3282.418543958975!2d-58.665555385734514!3d-34.644131367142535!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x95bcbf43f15392ad%3A0x57277abbf9f8e3d9!2sConcejal%20Nicol%C3%A1s%20Defilippi%201253%2C%20B1714ETI%20Ituzaing%C3%B3%2C%20Buenos%20Aires!5e0!3m2!1ses-419!2sar!4v1571452579278!5m2!1ses-419!2sar" width="100%" height="450" frameborder="0" style="border: 0;" allowfullscreen=""></iframe>
    </div>
</div>

@section Scripts
{
    <script src="@Url.Content("~/js/contacto.js")"></script>
}
